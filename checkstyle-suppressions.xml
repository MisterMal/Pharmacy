<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.0//EN" "https://checkstyle.org/dtds/suppressions_1_0.dtd">
<suppressions>
  <!-- why? -->
  <suppress checks="MissingJavadocTypeCheck" files=".*\.java" />
  <suppress checks="MissingJavadocMethodCheck" files=".*\.java" />
  <!-- who cares -->
  <suppress checks="CommentsIndentationCheck" files=".*\.java" />
  <!-- current situation is already tragic, why not add several more screenfuls
   of imports?-->
  <suppress checks="AvoidStarImportCheck" files=".*\.java" />
  <!-- NIP -->
  <suppress checks="AbbreviationAsWordInNameCheck" files=".*\.java" />

  <!-- to akurat ma sens -->
  <suppress checks="MemberNameCheck" files=".*\.java" />
  <suppress checks="ParameterNameCheck" files=".*\.java" />

  <suppress checks="PackageNameCheck" files=".*[Dd][Tt][Oo].*.java" />

  <suppress checks="PackageNameCheck" files="i18n.java" />
  <suppress checks="TypeNameCheck" files="i18n.java" />

</suppressions>
